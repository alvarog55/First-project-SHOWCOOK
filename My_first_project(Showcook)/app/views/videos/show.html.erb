<div class="post">
	<h1><%=  @video.title%></h1>
	<h2 class="title">Author: <%= link_to(@video.user.name, user_path(@user))%></h2>
	<p class="byline">Posted by <%= link_to(@video.user.name, user_path(@user)) %> (<%= @video.updated_at.time.to_formatted_s(:short) %>)</p>
	<iframe src= <%= @video.link_url%> frameborder="0" allowfullscreen></iframe>
	<div class="entry">
		<p><%= @video.description%></p>
		<p>Category: <%= @video.category.title%></p>
		<p> Recipe: <%= @video.recipe %> </p>
		<h2> Comments </h2>
		<ul>
			<% @comments.each do |comment| %>
				<li> User: <%= comment.user.name %>
					Comment:<%= comment.text_comment %> 
					Updated at: <%= comment.updated_at.strftime("%H:%M") %>
				</li> 
			<% end %>
		</ul>
	</div>
	<div class="meta"><p class="links"><a href="#" class="comments">Comments (32)</a></p></div>	
</div>

<ul>
<li> <%= link_to "Go To Your Videos List", user_videos_path(current_user) %></li>
<li> <%= link_to "Create Video", new_user_video_path(current_user) %> </li>
<li> <%= link_to "Go To All Videos", users_path %></li>
</ul>